<div class="col-md-6 col-md-offset-3">
  <div class="new-book-form">

    <h1>New Musician</h1>

    <%= simple_form_for :musician, url: musicians_path, html: {class: "clearfix"} do |f| %>
      <% if @musician.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@musician.errors.count, "error") %> prohibited
            this record from being saved:
          </h2>
          <ul>
            <% @musician.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class='form-input'>
        <%= f.input :genre_id,
                    collection: @genres,
                    required: false,
                    selected: 1,
                    label: 'Select genre',
                    class: "form-control" %> <br>
        <%= f.input :name,
                    label: 'Name of Musician',
                    input_html: { class: 'form-control' } %>
        <%= f.input :surname, required: false, input_html: { class: 'form-control' } %>
        <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 90,
                                    end_year: Date.today.year - 12,
                                    order: [:month, :year, :day],
                                    required: false %>
        <%= f.input :description, as: :text, required: false %>
        <%= f.input :avatar, as: :file, label: 'Select Avatar' %> <br>
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>
